<link rel="stylesheet" href="./stylesheets/login.css">

    <div class="container-log">
        <a class="waves-effect waves-light btn modal-trigger orange darken-3 btn-log" href="#register"><i class="fas fa-user-plus"></i></a>
        <a class="waves-effect waves-light btn modal-trigger orange darken-3 btn-log" href="#login"><i class="fas fa-user"></i></a>
    </div>

    <!-- Modal Structure -->
    <div id="register" class="modal">
        <div class="login_head orange darken-3 center flow-text"><span>Register</span></div>
        <div class="login_body center valign-wrapper">
            <form action="/register" method="POST">
                <input class="center" name="email" type="email" placeholder="email@gmail.com" required>
                <input class="center" name="nombre" type="text" placeholder="nombre" required>
                <input class="center" name="password" type="password" placeholder="password" required>
                <input class="btn-floating btn-large waves-effect waves-light green" type="submit" value="OK">
            </form>
        </div>
    </div>
    <div id="login" class="modal">
        <div class="login_head orange darken-3 center flow-text"><span>Register</span></div>
        <div class="login_body center valign-wrapper">
            <form action="/auth" method="POST">
                <input class="center" name="email" type="email" placeholder="email@gmail.com" required>
                <input class="center" name="nombre" type="text" placeholder="nombre" required>
                <input class="center" name="password" type="password" placeholder="password" required>
                <input class="btn-floating btn-large waves-effect waves-light green" type="submit" value="OK">
            </form>
        </div>
    </div>

    <div>
        {{#with msj}}
        <div>
            {{email}}
        </div>
        <div>
            {{password}}
        </div>
        {{/with}}
    </div>



<script src="./javascripts/login.js"></script>